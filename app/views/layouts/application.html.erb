<!DOCTYPE html>
<html>
  <head>
    <title>RandomGroupMaker</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/3594900f7f.js"></script>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-5">
        <ul class="navbar-nav mr-auto">
          <%= link_to root_path, class: 'navbar-brand text-warning' do %>
            WTBGroup
          <% end %>
          <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to root_path, class: "nav-link #{request.url.index('character') || request.url == root_url ? 'active' : ''}" do %>
                Characters
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to groups_path, class: "nav-link #{request.url.index('group') ? 'active' : ''}" do %>
                Groups
              <% end %>
            </li>
          <% end %>
        </ul>
        <ul class="navbar-nav">
          <li class="nav-item">
            <% if user_signed_in? %>
              <%= link_to destroy_user_session_path, method: :delete, class: 'nav-link text-danger' do %>
                Sign Out
              <% end %>
            <% else %>
              <%= link_to new_user_session_path, class: 'nav-link text-danger' do %>
                Sign In
              <% end %>
            <% end %>
          </li>
        </ul>
      </nav>
    </header>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
