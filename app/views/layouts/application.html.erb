<!DOCTYPE html>
<html>
  <head>
    <title>RandomGroupMaker</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <%= link_to root_path, class: "nav-link #{request.url.index('character') || request.url == root_url ? 'active' : ''}" do %>
              Characters
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to groups_path, class: "nav-link #{request.url.index('group') ? 'active' : ''}" do %>
              Groups
            <% end %>
          </li>
        </ul>
      </nav>
    </header>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
