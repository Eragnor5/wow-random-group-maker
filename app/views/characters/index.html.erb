<p id="notice"><%= notice %></p>

<%= link_to 'Create Groups', groups_path %>

<h1>Characters</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Tank</th>
      <th>Melee Dps</th>
      <th>Ranged Dps</th>
      <th>Healer</th>
      <th>Fill Extras</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @characters.each do |character| %>
      <tr>
        <td><%= character.name %></td>

        <td><%= fa_icon 'check' if character.tank %></td>
        <td><%= fa_icon 'check' if character.mdps %></td>
        <td><%= fa_icon 'check' if character.rdps %></td>
        <td><%= fa_icon 'check' if character.healer %></td>
        <td><%= fa_icon 'check' if character.allow_multiple_groups %>
        <td><%= link_to 'Show', character %></td>
        <td><%= link_to 'Edit', edit_character_path(character) %></td>
        <td><%= link_to 'Destroy', character, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

